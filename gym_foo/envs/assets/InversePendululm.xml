<mujoco>
	<worldbody>
    <camera name="fixed" pos=" 0 3.5 1" xyaxes="-1 0 0 0 0 1"/>
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		<geom type="plane" size="1 1 0.1" rgba=".9 0 0 1"/>
		<body pos = " 0 0 0.1">
			 <joint name="slide" type = "slide" axis ="1 0 0" />
		   <geom type = "box" size ="0.1 0.1 0.1"/>
